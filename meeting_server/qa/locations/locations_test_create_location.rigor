name: Tests the creation of a location

steps:

  - description: POST a new location
    request:
      path: locations/
      method: POST
      data:
        state: Indiana
        city: West Lafayette
        street_address: 500 W. Stadium Avenue
      status: [201]
    extract:
      id: '{response.pk}'

  - description: POST a new location
    request:
      path: locations/
      method: POST
      data:
        state: Indiana
        city: West Lafayette
        street_address: 500 W. Stadium Avenue
      status: [400]


  - description: DELETE the location to clean dataset
    request:
      path: locations/{id}
      method: DELETE
