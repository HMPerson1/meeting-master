name: Tests creating an invitation

steps:

  - description: POST invitation
    request:
      path: /invitations
      method: POST
      data:
        event_id: 1
        user_id: 1
        status: 0
    extract:
      event_id: '{response.event_id}'
      user_id: '{response.user_id}'
    validate:
      - expect: 1
        actual: '{response.event_id}'
      - expect: 1
        actual: '{response.user_id}'
      - expect: 0
        actual: '{response.status}'
